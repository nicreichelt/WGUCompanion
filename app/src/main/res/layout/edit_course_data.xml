<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_course_data_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/course_edit_scroll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_edit_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="New Course"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/course_edit_name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/course_edit_header"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:hint="Course # - Course Name"
                android:maxLines="1" />

            <Spinner
                android:id="@+id/course_edit_status_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/course_edit_name_field"
                android:layout_marginBottom="8dp" />

            <RelativeLayout
                android:id="@+id/course_edit_start_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_edit_status_spinner">

                <EditText
                    android:id="@+id/course_edit_start_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/course_edit_start_checkbox"
                    android:layout_toStartOf="@+id/course_edit_start_checkbox"
                    android:ellipsize="end"
                    android:hint="Start Date (yyyy/mm/dd)"
                    android:inputType="date"
                    android:maxLines="1" />

                <CheckBox
                    android:id="@+id/course_edit_start_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="Reminder" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/course_edit_end_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_edit_start_container"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/course_edit_end_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/course_edit_end_checkbox"
                    android:layout_toStartOf="@+id/course_edit_end_checkbox"
                    android:ellipsize="end"
                    android:hint="End Date (yyyy/mm/dd)"
                    android:inputType="date"
                    android:maxLines="1" />

                <CheckBox
                    android:id="@+id/course_edit_end_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="Reminder" />

            </RelativeLayout>

            <TextView
                android:id="@+id/course_edit_assessment_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/course_edit_end_container"
                android:layout_marginBottom="8dp"
                android:text="Assessments"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/course_edit_assessment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/course_edit_assessment_header"
                android:layout_marginBottom="8dp"
                android:isScrollContainer="false"
                tools:listitem="@layout/list_item_checkbox">

            </ListView>

            <TextView
                android:id="@+id/course_edit_description_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/course_edit_assessment_list"
                android:layout_marginBottom="8dp"
                android:text="Description"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/course_edit_description_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/course_edit_description_header"
                android:layout_marginBottom="8dp"
                android:hint="Enter course description here..." />

            <TextView
                android:id="@+id/course_edit_mentor_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/course_edit_description_field"
                android:layout_marginBottom="8dp"
                android:text="Mentors"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/course_edit_mentor_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/course_edit_mentor_header"
                android:layout_marginBottom="8dp"
                android:isScrollContainer="false"
                tools:listitem="@layout/list_item_checkbox">

            </ListView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>